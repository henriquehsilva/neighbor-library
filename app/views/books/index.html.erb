<p id="notice"><%= notice %></p>

<h1>Livros</h1>

<table>
  <thead>
    <tr>
      <th>Número</th>
      <th>Título</th>
      <th>Autor</th>
      <th>Ano</th>
      <th>Status</th>
      <th>Emprestado para</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.number %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_year %></td>
        <td><%= book.status ? "Disponível" : "Indisponível" %></td>
        <td><%= book.borrowed_to %></td>
        <td><%= link_to '|Retirar / Devolver| Livro', edit_book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Doar livro', new_book_path %>
